<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F4F6FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button and Page Title Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back"
                android:tint="#5D5FEF"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />


            <!-- Space between icon and title -->
            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill Details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#5D5FEF" />

        </LinearLayout>

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg_rounded"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Month -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month:"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/textMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 2025"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_marginBottom="16dp" />

            <!-- Electricity Used -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity Used:"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/textUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350 kWh"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_marginBottom="16dp" />

            <!-- Total Charges -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Charges:"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 100.00"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_marginBottom="16dp" />

            <!-- Rebate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rebate:"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/textRebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_marginBottom="16dp" />

            <!-- Final Cost -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Cost After Rebate:"
                android:textStyle="bold"
                android:textColor="#333" />
            <TextView
                android:id="@+id/textFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 90.00"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>


